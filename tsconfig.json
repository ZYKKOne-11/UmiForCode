{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "./",
    "baseUrl": "./",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "paths": {
      "*": ["src/components/*", "src/pages/*", "src/*"],
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "mock/**/*",
    "src/**/*",
    "models/*",
    "config/**/*",
    "tests/**/*",
    ".umirc.ts",
    "typings.d.ts",
    "tailwind.config.js",
    "setupTests.js",
    "jest.config.js",
    "MyTailwindPlugin.js"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
  ]
}